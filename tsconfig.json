{
     "compilerOptions": {
          "target": "esnext",
          "module": "commonjs",
          "moduleResolution": "node",
          "skipLibCheck": true,
          "allowSyntheticDefaultImports": true,
          "allowJs": false,
          "importHelpers": true,
          "declaration": true,
          "outDir": "lib",
          "jsx": "react",
          "lib": [
               "es2019",
               "dom"
          ],
          "types": [
               "node"
          ],
          "esModuleInterop": true,
          "alwaysStrict": true,
          "sourceMap": true,
          "forceConsistentCasingInFileNames": true,
          "noFallthroughCasesInSwitch": true,
          "noImplicitReturns": true,
          "noUnusedLocals": true,
          "noUnusedParameters": true,
          "noImplicitAny": false,
          "noImplicitThis": false,
          "strictNullChecks": false
     },
     "include": [
          "src/**/*",
          "__tests__/**/*"
     ]
}